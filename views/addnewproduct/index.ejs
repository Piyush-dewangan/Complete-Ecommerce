<!doctype html>
<html lang="en">

<head>
    <title>Add new product</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        #wrapper {
            height: 100vh;
            width: 100vw;
            /* border: 2px solid red; */
        }

        #container {
            border: 1px grey black;
            width: 40rem;

        }

        .logo {
            height: 6rem;
            width: 23rem;
            object-fit: cover;
            /* border: 1px solid blue; */
        }
    </style>
</head>

<body>
    <div id="wrapper" class="d-flex justify-content-center align-items-center">
        <a href="/"><img src="logo.png" class="logo"></a>

        <div id="container" class=" shadow-lg p-3 mb-5 bg-white rounded">
            <form action="/upload" method="post" enctype="multipart/form-data">
                <h3>Add Product</h3>
                <div class="form-group">
                    <label for="">Product Name</label>
                    <input name="pn" type="text" class="form-control" id="" aria-describedby="emailHelp"
                        placeholder="" required>

                    <label for="exampleInputEmail1">Product Description</label>
                    <input name="pd" type="text" class="form-control" id="" aria-describedby="emailHelp" placeholder="" required>

                    <label for="exampleInputEmail1">Product Price</label>
                    <input name="pp" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="" required>

                    <label for="exampleInputEmail1">Product Quantity</label>
                    <input name="pq" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="" required>

                    <label for="">Product Image</label>
                    <input id="fileid" name="user_file" type="file" class="form-control-file" id="exampleFormControlFile1" accept="image/png, image/jpeg" required>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-warning btn btn-block rounded">Add product</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        var uploadField = document.getElementById("fileid");

        uploadField.onchange = function() {
            console.log( this.files[0]);
            let size=this.files[0].size;
            // //var FileName  = this.files[0].value;
            // // var FileExt = FileName.substr(FileName.lastIndexOf('.')+1);
            console.log(this.files[0].type);
            console.log(this.files[0].type == "image/png");
            console.log(this.files[0].type == "image/jpeg");
            if(this.files[0].type == "image/png")
            {
                if(size > 2200000){
                alert("File is too big!");
                this.value = "";
                }
            }
            else if(this.files[0].type == "image/jpeg"){
                console.log("This is running");
                if(size > 2200000){
                alert("File is too big!");
                this.value = "";
                } 
            }
            else
            {
                alert("This is file is not accepted");
                this.value="";
            }

        }

    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</body>

</html>